<div class="flyntComponent boxed grid8" is="flynt-block-author">
  <div class="container">
    <div class="box">
      <div class="box-inner box-inner--image">
        <figure class="figure">
          <img class="figure-image lazyload"
            src="{{ image.src|resize(32) }}"
            data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
            data-sizes="auto">
          {% if image.caption %}
            <figcaption class="figure-caption">{{ image.caption|e }}</figcaption>
          {% endif %}
        </figure>
      </div>
      <div class="box-inner box-inner--content">
        <div class="top small">
          <div>{{authorName}}</div>
          <span>{{authorJobtitle}},</span>
          <span>{{authorOrganisationtype}},</span>
          <span>{{authorCompany}}</span>
        </div>
        <div class="bottom">{{ authorBioHtml|e('wp_kses_post') }}</div>
        
        
        
      </div>
    </div>
  </div>
</div>
