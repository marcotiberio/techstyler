<div class="flyntComponent boxed" id="{{ options.sectionId|lower|replace({' ': '-'})}}" is="flynt-block-repeater-columns">
  <div class="container gridLayout">
    <div class="content content-title sectionId">{{ options.sectionId }}</div>
    <div class="content content-repeater">
      <div class="content-repeater--title h1">{{ repeaterTitle }}</div>
      <ul class="list">
        {% for panel in itemPanels %}
            <li class="panel">
              <div class="panel-title">{{ panel.panelTitle }}</div>
              <div class="panel-description">{{ panel.panelDescription }}</div>
            </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
